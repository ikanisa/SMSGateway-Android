<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for SMS Gateway.
    
    Enforces:
    - No cleartext (HTTP) traffic in production
    - Certificate pinning for Supabase in production
    - Allows user certificates in debug builds for testing
-->
<network-security-config>
    <!-- Default configuration: Prevent cleartext traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Certificate pinning for Supabase -->
    <domain-config>
        <domain includeSubdomains="true">supabase.co</domain>
        <pin-set expiration="2027-01-01">
            <!-- 
                Supabase uses Let's Encrypt certificates.
                These pins include the root and intermediate certificates.
            -->
            <!-- ISRG Root X1 (Let's Encrypt root) -->
            <pin digest="SHA-256">C5+lpZ7tcVwmwQIMcRtPbsQtWLABXhQzejna0wHFr8M=</pin>
            <!-- Let's Encrypt R3 intermediate -->
            <pin digest="SHA-256">jQJTbIh0grw0/1TkHSumWb+Fs0Ggogr621gT3PvPKG0=</pin>
            <!-- Supabase leaf certificate -->
            <pin digest="SHA-256">gq0i3k2tlOamMGsUv1/KzkNle4NlMUhIIJpbWNyzQgk=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Debug-only configuration: Allow user-installed certificates -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system" />
            <!-- Trust user-installed CAs for debugging with tools like Charles Proxy -->
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
