<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for SMS Gateway.
    
    Enforces:
    - No cleartext (HTTP) traffic in production
    - Certificate pinning for Supabase in production
    - Allows user certificates in debug builds for testing
-->
<network-security-config>
    <!-- Default configuration: Prevent cleartext traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Certificate pinning for Supabase -->
    <domain-config>
        <domain includeSubdomains="true">supabase.co</domain>
        <pin-set expiration="2027-01-01">
            <!-- 
                TODO: Replace with actual certificate hashes.
                These are placeholder values that need to be updated
                with the real SHA-256 pin hashes from Supabase.
                
                To get the hashes, run:
                openssl s_client -servername YOUR_PROJECT.supabase.co -connect YOUR_PROJECT.supabase.co:443 | openssl x509 -pubkey -noout | openssl pkey -pubin -outform der | openssl dgst -sha256 -binary | openssl enc -base64
            -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Debug-only configuration: Allow user-installed certificates -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system" />
            <!-- Trust user-installed CAs for debugging with tools like Charles Proxy -->
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
